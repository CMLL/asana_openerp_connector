<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="asana_connector_form_view">
            <field name="name">asana.connector.form.view</field>
            <field name="model">asana.connector</field>
            <field name="arch" type="xml">
                <form version="7.0" string="Asana Connector">
                    <header>
                            <field name="state" widget="statusbar" statusbar_visible="draft, connected"/>
                            <button name="connect" string="Connect" class="oe_highlight" type="object"/>
                    </header>
                    <sheet>
                        <group string="Connection parameters" col="4" colspan="1">
                            <field name="name"/>
                            <field name="api_key"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="asana_connect_tree_view">
            <field name="name">asana.connector.tree.view</field>
            <field name="model">asana.connector</field>
            <field name="arch" type="xml">
                <tree version="7.0" string="Asana Connector">
                    <field name="name"/>
                    <field name="api_key"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="asana_connect_action">
            <field name="name">Asana Connector</field>
            <field name="res_model">asana.connector</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="target">current</field>
        </record>

        <menuitem name="Asana Connector" parent="base.menu_administration" sequence="1" id="asana_connector_main"/>
        <menuitem name="Connector" sequence="1" id="asana_connector_menu" action="asana_connect_action" parent="asana_connector_main"/>

    </data>
</openerp>

